<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CategoriesActivity"
    android:padding="20dp"
    android:background="@drawable/rounded_shape_analysis">

    <TextView
        android:id="@+id/tvConfirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you want to delete this category? \n\n**Note: Expenses belong to a deleted category are not permanently deleted"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnConfirmNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvConfirmation"
        android:layout_toStartOf="@+id/btnConfirmYes"
        android:backgroundTint="@color/choc"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:text="No" />

    <Button
        android:id="@+id/btnConfirmYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvConfirmation"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/black"
        android:textColor="@color/choc"
        android:layout_margin="10dp"
        android:text="Yes" />

</RelativeLayout>