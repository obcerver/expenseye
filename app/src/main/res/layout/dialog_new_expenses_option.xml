<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_margin="20dp"
    android:background="@drawable/rounded_shape_analysis">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Option to Add New Expenses"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textAlignment="center"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:rowCount="1">

        <Button
            android:id="@+id/btnNewExpenseAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/baseline_photo_camera"
            android:text="Scan"
            android:layout_margin="10dp"
            android:textSize="13dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/choc"
            android:layout_row="0"
            android:layout_column="0"/>

        <Button
            android:id="@+id/btnNewExpenseManual"
            android:layout_width="wrap_content"
            android:drawableBottom="@drawable/baseline_note_alt_24"
            android:layout_height="wrap_content"
            android:text="Manual"
            android:textSize="13dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/choc"
            android:layout_row="0"
            android:layout_column="1"/>

    </GridLayout>
</LinearLayout>