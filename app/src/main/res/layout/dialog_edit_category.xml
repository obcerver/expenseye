<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CategoriesActivity"
    android:padding="20dp"
    android:background="@drawable/rounded_shape_analysis">

    <TextView
        android:id="@+id/txtSelectedCategoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Category"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/edtSelectedCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSelectedCategoryTitle"
        android:hint="Category Name"
        android:layout_marginBottom="20dp"
        android:inputType="text" />

    <Button
        android:id="@+id/btnDeleteSelectedCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSelectedCategoryName"
        android:layout_toStartOf="@+id/btnEditSelectedCategory"
        android:backgroundTint="@color/choc"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:text="Delete" />

    <Button
        android:id="@+id/btnEditSelectedCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSelectedCategoryName"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/choc"
        android:text="Edit" />

</RelativeLayout>