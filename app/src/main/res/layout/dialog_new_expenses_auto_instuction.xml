<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_margin="20dp"
    android:background="@drawable/rounded_shape_analysis">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cropping Instruction"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make sure that your photos are crop as followed"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:src="@drawable/_instruction_1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:src="@drawable/_instruction_2"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnInstructionNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/choc"
        android:textSize="13dp" />

</LinearLayout>