<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CategoriesActivity"
    android:padding="20dp"
    android:background="@drawable/rounded_shape_analysis">

    <TextView
        android:id="@+id/txtNewCategoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Category"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/edtNewCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNewCategoryTitle"
        android:hint="Category Name"
        android:layout_marginBottom="20dp"
        android:inputType="text" />

    <Button
        android:id="@+id/btnAddNewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNewCategoryName"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/black"
        android:textColor="@color/choc"
        android:text="Add" />

</RelativeLayout>